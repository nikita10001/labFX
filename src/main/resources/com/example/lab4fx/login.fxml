      <Text fx:id="errorLabel" fill="RED" layoutX="167.0" layoutY="101.0" strokeType="OUTSIDE" strokeWidth="0.0" style="visibility: hidden;" text="Неправильный логин или пароль!">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
