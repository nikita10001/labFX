<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/19.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab4fx.controller.LoginController">
   <children>
      <Label layoutX="201.0" layoutY="190.0" text="Пароль" textFill="#111111d4">
         <font>
            <Font name="Segoe UI" size="16.0" />
         </font>
      </Label>
      <Label layoutX="201.0" layoutY="120.0" text="Логин" textFill="#111111">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="passwordTF" layoutX="201.0" layoutY="219.0" prefHeight="26.0" prefWidth="174.0" style="-fx-border-color: black;" />
      <TextField fx:id="loginTF" layoutX="201.0" layoutY="144.0" prefHeight="26.0" prefWidth="174.0" style="-fx-border-color: #111;" />
      <Label layoutX="213.0" layoutY="36.0" text="Авторизация">
         <font>
            <Font name="Segoe UI" size="25.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="209.0" layoutY="290.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="157.0" style="-fx-background-color: #15a42f; -fx-background-radius: 10; -fx-cursor: pointer" text="Войти" textFill="WHITE">
